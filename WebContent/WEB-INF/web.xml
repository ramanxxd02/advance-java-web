<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>advnace-java-web</display-name>
	<!-- <session-config> <session-timeout>1</session-timeout> </session-config> -->
	<welcome-file-list>
		<welcome-file>LoginView.jsp</welcome-file>
	</welcome-file-list>
	<!-- <servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>in.co.servlet.HelloServlet</servlet-class>
	</servlet> -->

	<!-- <servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/HelloServlet</url-pattern>
	</servlet-mapping> -->
	
	<servlet>
	<servlet-name>ServletConfigCtl</servlet-name>
	<servlet-class>in.co.servlet.ServletConfigCtl</servlet-class>
	<init-param>
	<param-name>driver</param-name>
	<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</init-param>
	<init-param>
	<param-name>url</param-name>
	<param-value>jdbc:mysql://localhost:3306/company</param-value>
	</init-param>
	</servlet>
	<servlet-mapping>
	<servlet-name>ServletConfigCtl</servlet-name>
	<url-pattern>/ServletConfigCtl</url-pattern>
	</servlet-mapping>
	
	
	<error-page>
		<error-code>404</error-code>
		<location>/Error404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/Error500.jsp</location>
	</error-page>
</web-app>